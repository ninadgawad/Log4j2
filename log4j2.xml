<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Log4jtoConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.ninad" level="debug" additivity="false">
            <AppenderRef ref="Log4jtoConsole"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Log4jtoConsole"/>
        </Root>
    </Loggers>
</Configuration>
